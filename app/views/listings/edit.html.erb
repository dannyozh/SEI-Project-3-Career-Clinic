<h1>Editing Listing</h1>

<%= form_with scope: :listing, model: @listing, local: true do |form| %>

	<p>
		<%= form.label :job_title %><br>
		<%= form.text_field :job_title %>
	</p>

	<p>
		<%= form.label :duration %><br>
		<%= form.number_field :duration, max:31, min:1, placeholder: "No." %>
		<%= form.select :select_attribute, options_for_select(([['Day(s)'],['Week(s)'],['Month(s)'],['Year(s)']])) %>
	</p>

	<p>
		<%= form.label :location %><br>
		<%= form.text_area :location %>
	</p>

	<p>
		<%= form.label :description %><br>
		<%= form.text_area :description %>
	</p>

	<p>
		<%= form.label :photo_url %><br>
		<%= form.text_area :photo_url %>
	</p>

	<p>
		<%= form.submit %>
	</p>
<% end %>

<%= link_to 'Show', @listing %> |
<%= link_to 'Back', listings_path %>