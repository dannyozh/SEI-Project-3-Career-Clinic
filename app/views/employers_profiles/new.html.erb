

<div class="container d-flex my-5">



		<div class="float-left my-5 col-md-7">
			<h3 class="text-left blue-text mx-auto col-md-9 sign-up-title">Hello Employer! Complete your company profile!</h3>
				<img width="100%" src="<%= image_url 'work.jpg' %>" />
		</div>

		<div class="form-group emp-form profile-form blue my-auto rounded col-md-5 float-right">

				<div class="inner-form col-md-9 mx-auto my-5">

					<%= form_with scope: :employers_profile, url: employers_profiles_path, local: true do |form| %>

						<div class="field">
							<%#= <%= form.label :name %>
    <%= form.text_field :company_name, class: "input", placeholder: "Company Name" %>
						</div>
						<div class="field ">
							<%#=	  <%= form.label :logo %>
   	 <%= form.text_field :company_logo, class: "input", placeholder: "Upload Company Logo" %>
						<%= form.file_field :company_logo %>
						</div>

						<div class="actions text-center">
							 <%= form.submit class: "create-profile-btn" %>
						</div>
						<% end %>
						<%#=<%= render "employers/shared/links" %>
				</div>
			<%#=	<%= link_to 'Back', employers_profiles_path %>
		</div>

</div>